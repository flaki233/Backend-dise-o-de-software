{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // üîπ Agregados recomendados:
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",          // ‚¨ÖÔ∏è guarda los .js compilados aqu√≠
    "incremental": true          // mejora tiempos de recompilaci√≥n
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
